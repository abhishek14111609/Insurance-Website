PORT=5000
NODE_ENV=development

# Mongo connection string, e.g. mongodb+srv://user:pass@cluster/dbname
MONGODB_URI=mongodb+srv://<user>:<pass>@cluster-host/dbname


JWT_SECRET=change_me_in_prod
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

RAZORPAY_KEY_ID=your_public_key
RAZORPAY_KEY_SECRET=your_secret_key_keep_on_backend_only

FRONTEND_URL=http://localhost:5173
ADMIN_URL=http://localhost:5174

# Comma separated allowed origins for CORS in prod
# e.g. https://pashudhansuraksha.vercel.app,https://pashudhansurakshaadmin.vercel.app
CORS_ORIGINS=

# Cookie settings for cross-site sessions (Vercel -> Render)
COOKIE_SECURE=true
COOKIE_SAMESITE=none
# Leave blank unless you need a fixed domain (e.g. pashudhansurakshabackend.onrender.com)
COOKIE_DOMAIN=

UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
